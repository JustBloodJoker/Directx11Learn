Texture2D ObjTexture;
SamplerState SampleType;

cbuffer MaterialBuffer
{
    float4x4 WVP;
    float Ns;
    float3 Ka;
    float3 Kd;
    float3 Ks;
    float3 Ke;
    float Ni;
    float d;
    int illum;
};

struct PixelInputType
{
    float4 pos : SV_POSITION;
    float2 tex : TEXCOORD;
};

float4 PS(PixelInputType input) : SV_TARGET
{
    float4 color = ObjTexture.Sample(SampleType, input.tex);
    
    float3 ambient = Ka;
    float3 diffuse = Kd;
    float3 specular = Ks;
    
  // color.rgb *= ambient + diffuse + specular;
    
    return color;
}